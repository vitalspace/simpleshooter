{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node12",

    "rootDir": "src",
    "outDir": "dist",

    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
